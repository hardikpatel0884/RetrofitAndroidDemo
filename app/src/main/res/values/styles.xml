<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Login" parent="AppTheme">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">#b4ffffff</item>
        <item name="android:textSize">18sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">#b4ffffff</item>
        <item name="colorControlNormal">#b4817e7e</item>
        <item name="colorControlActivated">#b4ffffff</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">#e5ffa5a6</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="hint_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">#b4ffffff</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>
